{
  "name": "treeherder-manifest",
  "version": "1.0.0",
  "private": true,
  "repository": "mozilla-rpweb/treeherder-manifest",
  "author": "Eli Perelman <eli@eliperelman.com>",
  "license": "MIT",
  "neutrino": {
    "use": [
      "neutrino-preset-react"
    ],
    "config": {
      "entry": {
        "vendor": [
          "react",
          "react-dom",
          "react-redux",
          "react-router",
          "react-router-dom",
          "reactstrap",
          "redux"
        ]
      }
    },
    "options": {
      "html": {
        "title": "Treeherder TestGroup - Experimental",
        "meta": [
          {
            "name": "description",
            "content": "Treeherder TestGroup - Experimental"
          },
          {
            "name": "author",
            "content": "Mozilla Treeherder"
          }
        ]
      }
    }
  },
  "scripts": {
    "start": "neutrino start",
    "build": "neutrino build",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "bootstrap": "4.0.0-alpha.6",
    "font-awesome": "^4.7.0",
    "neutrino": "^5.0.1",
    "neutrino-preset-react": "^5.0.1",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-fontawesome": "^1.5.0",
    "react-hot-loader": "3.0.0-beta.6",
    "react-redux": "^5.0.3",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "reactstrap": "^4.3.0",
    "redux": "3.6.0"
  }
}
